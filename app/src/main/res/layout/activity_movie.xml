<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="12dp"
        android:weightSum="5">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/poster"
            android:layout_weight="3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="8dp"
            android:orientation="vertical">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:textColor="@color/text_silver"
                android:layout_marginBottom="8dp"
                android:id="@+id/title"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/text_silver"
                android:layout_marginBottom="8dp"
                android:id="@+id/rating"
                android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/text_silver"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/year"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/director"
                android:textColor="@color/text_silver"
                android:textSize="15sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/actors"
                android:textColor="@color/text_silver"
                android:textSize="15sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="4dp"
                    android:id="@+id/rotten_tomato_layout">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rotten_tomatoes"
                        android:textColor="@color/text_silver"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="Rotten Tomato"
                        android:visibility="invisible"
                        android:layout_marginBottom="8dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/rotten_tomato_rating"
                        android:textSize="25sp"
                        android:textColor="@color/text_silver"
                        android:gravity="center"
                        android:layout_below="@+id/rotten_tomatoes" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/imdb_layout">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/imdb"
                        android:textColor="@color/text_silver"
                        android:textSize="12sp"
                        android:text="IMDB"
                        android:visibility="invisible"
                        android:layout_marginBottom="8dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imdb_rating"
                        android:textSize="25sp"
                        android:textColor="@color/text_silver"
                        android:gravity="center"
                        android:layout_below="@+id/imdb" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:id="@+id/synopsis"
        android:textSize="15sp"
        android:textColor="@color/text_silver"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/text_silver"
            android:text="Add to Favorites"
            android:visibility="visible"
            android:background="@color/highlighted_text_material_dark"
            android:id="@+id/fav_Button"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textColor="@color/text_silver"
            android:text="See this movie's IMDB page"
            android:visibility="visible"
            android:background="@color/highlighted_text_material_light"
            android:id="@+id/webviewButton"/>
    </LinearLayout>

</LinearLayout>